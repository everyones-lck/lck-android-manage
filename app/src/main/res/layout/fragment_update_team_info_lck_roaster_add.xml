<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_update_team_lck_roaster_add_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀 이름"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_marginStart="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_update_team_lck_roaster_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LCK Roaster"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_update_team_lck_roaster_add_team_name"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_update_team_lck_roaster_add_previous"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_previous_white"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_update_team_lck_roaster_add_team_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_team_lck_roaster_add_team_name"
            app:layout_constraintEnd_toStartOf="@id/tv_update_team_lck_roaster_add_team_name"/>

        <ImageView
            android:id="@+id/iv_update_team_lck_roaster_add_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_update_info_rect"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_update_team_lck_roaster_add_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_update_team_lck_roaster_add_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/iv_update_team_lck_roaster_add_photo"
            app:layout_constraintStart_toStartOf="@id/iv_update_team_lck_roaster_add_photo"
            app:layout_constraintEnd_toEndOf="@id/iv_update_team_lck_roaster_add_photo"/>

        <EditText
            android:id="@+id/ed_update_team_lck_roaster_add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="이름 수정"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textColorHint="@color/white"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@id/tv_update_team_lck_roaster_add_name_title"
            app:layout_constraintStart_toStartOf="@id/tv_update_team_lck_roaster_add_name_title"
            app:layout_constraintEnd_toEndOf="@id/tv_update_team_lck_roaster_add_name_title" />

        <TextView
            android:id="@+id/tv_update_team_lck_roaster_add_position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포지션"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="75dp"
            app:layout_constraintTop_toBottomOf="@id/tv_update_team_lck_roaster_add_name_title"
            app:layout_constraintStart_toStartOf="@id/tv_update_team_lck_roaster_add_name_title"
            app:layout_constraintEnd_toEndOf="@id/tv_update_team_lck_roaster_add_name_title"/>

        <LinearLayout
            android:id="@+id/ll_update_team_lck_roaster_add_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_update_team_lck_roaster_add_position_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="13dp">

            <CheckBox
                android:id="@+id/cb_update_team_lck_roaster_add_position_top"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:button="@null"
                android:background="@drawable/custom_radio_button" />

            <TextView
                android:id="@+id/tv_update_team_lck_roaster_add_position_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탑"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>

            <CheckBox
                android:id="@+id/cb_update_team_lck_roaster_add_position_mid"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:button="@null"
                android:background="@drawable/custom_radio_button"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/tv_update_team_lck_roaster_add_position_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미드"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>

            <CheckBox
                android:id="@+id/cb_update_team_lck_roaster_add_position_jungle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:button="@null"
                android:background="@drawable/custom_radio_button"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/tv_update_team_lck_roaster_add_position_jungle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정글"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>

            <CheckBox
                android:id="@+id/cb_update_team_lck_roaster_add_position_bot"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:button="@null"
                android:background="@drawable/custom_radio_button"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/tv_update_team_lck_roaster_add_position_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원딜"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>

            <CheckBox
                android:id="@+id/cb_update_team_lck_roaster_add_position_support"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:button="@null"
                android:background="@drawable/custom_radio_button"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/tv_update_team_lck_roaster_add_position_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서폿"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_update_team_lck_roaster_add_position"
            android:layout_marginTop="85dp">

            <ImageView
                android:id="@+id/iv_update_team_lck_roaster_add_check"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_update_team_info_check" />

            <ImageView
                android:id="@+id/iv_update_team_lck_roaster_add_no"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_update_team_info_no" />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>