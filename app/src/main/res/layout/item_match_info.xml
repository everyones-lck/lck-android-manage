<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/tv_match_info_match_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:text="LCK Summer Match"
            android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_match_info_match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:text="17:00"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@id/tv_match_info_match_title"
            app:layout_constraintTop_toTopOf="@id/tv_match_info_match_title"/>

        <TextView
            android:id="@+id/tv_match_info_match_team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:text="T1"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@id/tv_match_info_match_time"
            app:layout_constraintTop_toTopOf="@id/tv_match_info_match_time"/>

        <TextView
            android:id="@+id/tv_match_info_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:text="/"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_match_info_match_team1"
            app:layout_constraintTop_toTopOf="@id/tv_match_info_match_team1"/>

        <TextView
            android:id="@+id/tv_match_info_match_team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:text="GEN"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_match_info_line"
            app:layout_constraintTop_toTopOf="@id/tv_match_info_line"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>