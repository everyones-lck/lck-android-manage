<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_color">

        <ImageView
            android:id="@+id/iv_match_info_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_match_info_title"
            style="@style/TextAppearance.LCK.Bold.Title1_22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매치 정보 입력"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_match_info_back_btn"
            app:layout_constraintTop_toTopOf="@id/iv_match_info_back_btn"
            app:layout_constraintTop_toBottomOf="@id/iv_match_info_back_btn"/>

        <TextView
            android:id="@+id/tv_match_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.01.01"
            android:textSize="14sp"
            style="@style/TextAppearance.LCK.Bold"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="@+id/iv_match_info_back_btn"
            app:layout_constraintTop_toBottomOf="@id/iv_match_info_back_btn"/>

        <TextView
            android:id="@+id/tv_match_info_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_4_gray_fill"
            style="@style/TextAppearance.LCK.Light"
            android:text="날짜 선택"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:padding="3dp"
            app:layout_constraintStart_toEndOf="@+id/tv_match_info_date"
            app:layout_constraintTop_toTopOf="@+id/tv_match_info_date"
            app:layout_constraintBottom_toBottomOf="@+id/tv_match_info_date"/>

        <ImageView
            android:id="@+id/iv_match_info_add_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_add_btn"
            android:layout_marginEnd="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_match_info_date"
            app:layout_constraintBottom_toBottomOf="@id/tv_match_info_date"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_match_info_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:listitem="@layout/item_match_info"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_match_info_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>