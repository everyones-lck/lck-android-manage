<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_color">

        <ImageView
            android:id="@+id/iv_match_detail_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_match_detail_title"
            style="@style/TextAppearance.LCK.Bold.Title1_22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매치 정보 입력"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_match_detail_back_btn"
            app:layout_constraintTop_toTopOf="@id/iv_match_detail_back_btn"
            app:layout_constraintTop_toBottomOf="@id/iv_match_detail_back_btn"/>

        <TextView
            android:id="@+id/tv_match_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.01.01"
            android:textSize="14sp"
            style="@style/TextAppearance.LCK.Bold"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="@+id/iv_match_detail_back_btn"
            app:layout_constraintTop_toBottomOf="@id/iv_match_detail_back_btn"/>

        <TextView
            android:id="@+id/tv_input_match_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Bold"
            android:textSize="14sp"
            android:text="매치 이름"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_match_info_date"
            app:layout_constraintStart_toStartOf="@id/tv_match_info_date"/>

        <EditText
            android:id="@+id/et_input_match_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:hint="매치 이름"
            android:textColorHint="@color/gray"
            android:background="@null"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toTopOf="@id/tv_input_match_title"
            app:layout_constraintStart_toEndOf="@id/tv_input_match_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>