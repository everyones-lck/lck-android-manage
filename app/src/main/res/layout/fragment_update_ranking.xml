<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_update_ranking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="순위 입력 및 업데이트"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_update_ranking_previous"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_previous_white"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_title"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_update_ranking"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/iv_update_ranking_previous" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>