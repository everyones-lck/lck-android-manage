<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_update_team_lck_coach_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팀 이름"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_marginStart="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_update_team_lck_coach_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LCK Coach"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/tv_update_team_lck_coach_team_name"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_update_team_lck_coach_previous"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_previous_white"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_update_team_lck_coach_team_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_team_lck_coach_team_name"
            app:layout_constraintEnd_toStartOf="@id/tv_update_team_lck_coach_team_name"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_update_team_lck_coach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@id/iv_update_team_lck_coach_previous"
            app:layout_constraintStart_toStartOf="@id/iv_update_team_lck_coach_previous"
            app:layout_constraintEnd_toEndOf="@id/iv_update_team_lck_coach_previous"/>

        <ImageView
            android:id="@+id/iv_update_team_lck_coach_player_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_update_team_add"
            android:layout_marginTop="35dp"
            android:layout_marginStart="35dp"
            app:layout_constraintTop_toBottomOf="@id/rv_update_team_lck_coach"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>