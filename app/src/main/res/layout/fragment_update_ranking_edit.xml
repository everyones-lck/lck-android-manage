<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_update_ranking_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="순위 입력 및 업데이트"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_update_ranking_edit_previous"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_previous_white"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_edit_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_edit_title"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_edit_title"/>

        <TextView
            android:id="@+id/tv_update_ranking_edit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="55dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_update_ranking_edit_title"/>

        <TextView
            android:id="@+id/tv_update_ranking_edit_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="team_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="55dp"
            app:layout_constraintTop_toBottomOf="@id/tv_update_ranking_edit_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_update_ranking_edit_win_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFCF40"
            android:textSize="16sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_edit_slash"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_edit_slash"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_edit_slash"/>

        <TextView
            android:id="@+id/tv_update_ranking_edit_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_edit_lose_number"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_edit_lose_number"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_edit_lose_number"/>

        <TextView
            android:id="@+id/tv_update_ranking_edit_lose_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#FF6464"
            android:textSize="16sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_edit_slash_1"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_edit_slash_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_edit_slash_1"/>

        <TextView
            android:id="@+id/tv_update_ranking_edit_slash_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_edit_winning_point"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_edit_winning_point"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_edit_winning_point"/>

        <TextView
            android:id="@+id/tv_update_ranking_edit_winning_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_update_ranking_edit_title"/>

        <LinearLayout
            android:id="@+id/ll_update_ranking_edit_win_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@id/tv_update_ranking_edit_team_name">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="win_number"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/et_update_ranking_edit_win_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="\@"
                android:textColor="@color/gray"
                android:hint="\@"
                android:textColorHint="@color/gray"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_update_ranking_edit_lose_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_update_ranking_edit_win_number">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lose_number"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/et_update_ranking_edit_lose_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="\@"
                android:textColor="@color/gray"
                android:hint="\@"
                android:textColorHint="@color/gray"
                android:layout_marginStart="47dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_update_ranking_edit_winning_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_update_ranking_edit_lose_number">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="winning_point"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/et_update_ranking_edit_winning_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="\@"
                android:textColor="@color/gray"
                android:hint="\@"
                android:textColorHint="@color/gray"
                android:layout_marginStart="45dp"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>