<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_update_team_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 정보 입력 및 업데이트"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_update_team_detail_previous"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_previous_white"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/tv_update_team_detail_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_update_team_detail_title"
                app:layout_constraintEnd_toStartOf="@id/tv_update_team_detail_title"/>

            <TextView
                android:id="@+id/tv_update_team_detail_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 이름"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="45dp"
                app:layout_constraintStart_toStartOf="@id/iv_update_team_detail_previous"
                app:layout_constraintTop_toBottomOf="@id/iv_update_team_detail_previous"/>

            <TextView
                android:id="@+id/tv_update_team_detail_lck_roaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lck Roaster"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_detail_team_name"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_detail_team_name"/>

            <TextView
                android:id="@+id/tv_update_team_detail_lck_coach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lck Coach"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_detail_lck_roaster"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_detail_lck_roaster"/>

            <TextView
                android:id="@+id/tv_update_team_detail_lck_cl_roaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lck Cl Roaster"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_detail_lck_coach"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_detail_lck_coach"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/start_gradient_color"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_detail_lck_cl_roaster"/>

            <TextView
                android:id="@+id/tv_update_team_detail_winning_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우승이력"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_detail_lck_cl_roaster"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_detail_lck_cl_roaster"/>

            <TextView
                android:id="@+id/tv_update_team_detail_history_of_roaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="역대 로스터"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_detail_winning_history"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_detail_winning_history"/>

            <TextView
                android:id="@+id/tv_update_team_detail_tournament_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="역대 시즌 및 대회 성적"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_detail_history_of_roaster"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_detail_history_of_roaster"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </android.widget.ScrollView>

</layout>