<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_update_team_info_winning_history_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/et_update_team_info_winning_history_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="0000"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="20sp"
            android:background="@null"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/tv_update_team_info_winning_history_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lck Summer"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="25dp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/tv_update_team_info_winning_history_year"
            app:layout_constraintTop_toTopOf="@+id/tv_update_team_info_winning_history_year"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_team_info_winning_history_year"/>


        <EditText
            android:id="@+id/et_update_team_info_winning_history_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:background="@null"
            android:layout_marginStart="25dp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/et_update_team_info_winning_history_year"
            app:layout_constraintTop_toTopOf="@+id/et_update_team_info_winning_history_year"
            app:layout_constraintBottom_toBottomOf="@id/et_update_team_info_winning_history_year"/>


        <ImageView
            android:id="@+id/iv_update_team_info_winning_history_edit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_team_info_edit"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@id/tv_update_team_info_winning_history_year"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_team_info_winning_history_year"
            app:layout_constraintEnd_toStartOf="@id/iv_update_team_info_winning_history_delete"/>

        <ImageView
            android:id="@+id/iv_update_team_info_winning_history_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_update_team_info_no"
            android:visibility="visible"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_update_team_info_winning_history_save"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_update_team_info_check"
            android:visibility="gone"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>