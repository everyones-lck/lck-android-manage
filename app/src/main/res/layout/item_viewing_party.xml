<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_12_white_fill"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_viewing_party_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="240514 홍대 뷰파"
            android:textAppearance="@style/TextAppearance.LCK.Bold.List_14sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginStart="12dp"/>
        
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_viewing_party_profile_bg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="@id/tv_viewing_party_title"
            app:layout_constraintTop_toBottomOf="@id/tv_viewing_party_title"
            android:layout_marginTop="4dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/iv_viewing_party_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_t1"
                android:scaleType="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_viewing_party_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Perfect 조아 | KT"
            android:textAppearance="@style/TextAppearance.LCK.Light.Detail_10sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/cv_viewing_party_profile_bg"
            app:layout_constraintBottom_toBottomOf="@id/cv_viewing_party_profile_bg"
            app:layout_constraintStart_toEndOf="@id/cv_viewing_party_profile_bg"
            android:layout_marginStart="4dp"/>

        <ImageView
            android:id="@+id/iv_viewing_party_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/img_viewing_party_logo" />

        <TextView
            android:id="@+id/tv_viewing_party_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_12_black_line"
            tools:text="부천시 역곡동"
            android:textAppearance="@style/TextAppearance.LCK.Light.Detail_10sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_viewing_party_writer"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tv_viewing_party_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_12_black_line"
            tools:text="2024.07.10"
            android:textAppearance="@style/TextAppearance.LCK.Light.Detail_10sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_viewing_party_address"
            app:layout_constraintEnd_toStartOf="@id/tv_viewing_party_address"
            android:layout_marginTop="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>