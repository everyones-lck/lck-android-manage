<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/tv_set_result_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:text="1세트"
            android:textSize="14sp"

            android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        
        <RadioGroup
            android:id="@+id/rg_set_result_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/tv_set_result_win"
            app:layout_constraintTop_toTopOf="@id/tv_set_result_win"
            app:layout_constraintBottom_toBottomOf="@id/tv_set_result_win"
            android:layout_marginStart="50dp">
            
            <RadioButton
                android:id="@+id/btn_set_result_team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T1"
                style="@style/TextAppearance.LCK.Light"/>

            <RadioButton
                android:id="@+id/btn_set_result_team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GEN"
                style="@style/TextAppearance.LCK.Light"
                android:layout_marginStart="30dp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tv_set_result_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:text="보내기"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_rect_4_gray_fill"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/tv_set_result_win"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_set_result_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:text="완료"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_rect_4_gray_fill"
            android:alpha="0.5"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/tv_set_result_win"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>