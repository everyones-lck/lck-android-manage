<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <TextView
                android:id="@+id/tv_update_team_lck_cl_roaster_add_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀 이름"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginStart="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_update_team_lck_cl_roaster_add_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LCK Cl Roaster"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/tv_update_team_lck_cl_roaster_add_team_name"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/iv_update_team_lck_cl_roaster_add_previous"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_previous_white"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/tv_update_team_lck_cl_roaster_add_team_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_team_name"
                app:layout_constraintEnd_toStartOf="@id/tv_update_team_lck_cl_roaster_add_team_name"/>

            <ImageView
                android:id="@+id/iv_update_team_lck_cl_roaster_add_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/img_update_info_rect"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_title"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_update_team_lck_cl_roaster_add_gallery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_team_info_edit"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@id/iv_update_team_lck_cl_roaster_add_photo"
                app:layout_constraintBottom_toBottomOf="@id/iv_update_team_lck_cl_roaster_add_photo"/>

            <TextView
                android:id="@+id/tv_update_team_lck_cl_roaster_add_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름 : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/iv_update_team_lck_cl_roaster_add_photo"
                app:layout_constraintStart_toStartOf="@id/iv_update_team_lck_cl_roaster_add_photo" />

            <EditText
                android:id="@+id/et_update_team_lck_cl_roaster_add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="\@ \@ \@"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textColorHint="@color/gray"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_update_team_lck_cl_roaster_add_name_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_name_title"
                app:layout_constraintStart_toEndOf="@id/tv_update_team_lck_cl_roaster_add_name_title" />

            <TextView
                android:id="@+id/tv_update_team_lck_cl_roaster_add_nick_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예명 : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_name_title"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_lck_cl_roaster_add_name_title" />

            <EditText
                android:id="@+id/et_update_team_lck_cl_roaster_add_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="\@ \@ "
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textColorHint="@color/gray"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_update_team_lck_cl_roaster_add_nick_name_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_nick_name_title"
                app:layout_constraintStart_toEndOf="@id/tv_update_team_lck_cl_roaster_add_nick_name_title" />

            <TextView
                android:id="@+id/tv_update_team_lck_cl_roaster_add_birth_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생일 : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_nick_name_title"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_lck_cl_roaster_add_nick_name_title" />

            <EditText
                android:id="@+id/et_update_team_lck_cl_roaster_add_birth_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0000.00.00"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textColorHint="@color/gray"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_update_team_lck_cl_roaster_add_birth_date_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_birth_date_title"
                app:layout_constraintStart_toEndOf="@id/tv_update_team_lck_cl_roaster_add_birth_date_title" />

            <TextView
                android:id="@+id/tv_update_team_lck_cl_roaster_add_position_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포지션 : "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_birth_date_title"
                app:layout_constraintStart_toStartOf="@id/tv_update_team_lck_cl_roaster_add_birth_date_title" />

            <EditText
                android:id="@+id/et_update_team_lck_cl_roaster_add_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="포지션"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textColorHint="@color/gray"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_update_team_lck_cl_roaster_add_position_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_update_team_lck_cl_roaster_add_position_title"
                app:layout_constraintStart_toEndOf="@id/tv_update_team_lck_cl_roaster_add_position_title" />

            <LinearLayout
                android:id="@+id/ll_update_team_lck_cl_roaster_add_history_of_team_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_update_team_lck_cl_roaster_add_position"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/iv_update_team_lck_cl_roaster_add_check"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_update_team_info_check" />

                <ImageView
                    android:id="@+id/iv_update_team_lck_cl_roaster_add_no"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_update_team_info_no" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/transparent"
                app:layout_constraintTop_toBottomOf="@id/ll_update_team_lck_cl_roaster_add_history_of_team_check"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
