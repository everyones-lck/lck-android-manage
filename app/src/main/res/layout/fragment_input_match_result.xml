<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_color">

        <ImageView
            android:id="@+id/iv_match_result_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_match_result_title"
            style="@style/TextAppearance.LCK.Bold.Title1_22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세트 결과 입력"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_match_result_back_btn"
            app:layout_constraintTop_toTopOf="@id/iv_match_result_back_btn"
            app:layout_constraintTop_toBottomOf="@id/iv_match_result_back_btn"/>

        <TextView
            android:id="@+id/tv_match_result_match_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:text="LCK Summer Match"
            android:layout_marginStart="48dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_match_result_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_match_result_match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:text="2024.01.01"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@id/tv_match_result_match_title"
            app:layout_constraintTop_toTopOf="@id/tv_match_result_match_title"/>

        <TextView
            android:id="@+id/tv_match_result_match_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:textSize="14sp"
            android:text="17:00"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/tv_match_result_match_date"
            app:layout_constraintTop_toTopOf="@id/tv_match_result_match_date"/>

        <TextView
            android:id="@+id/tv_match_result_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:text="매치"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_match_result_match_title"
            app:layout_constraintStart_toStartOf="@id/tv_match_result_match_title"/>

        <RadioGroup
            android:id="@+id/rg_match_result_winner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/tv_match_result_win"
            app:layout_constraintTop_toTopOf="@id/tv_match_result_win"
            app:layout_constraintBottom_toBottomOf="@id/tv_match_result_win"
            android:layout_marginStart="50dp">

            <RadioButton
                android:id="@+id/btn_match_result_team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T1"
                style="@style/TextAppearance.LCK.Light"/>

            <RadioButton
                android:id="@+id/btn_match_result_team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GEN"
                style="@style/TextAppearance.LCK.Light"
                android:layout_marginStart="30dp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tv_manage_pog_close_set2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.LCK.Light"
            android:text="보내기"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/shape_rect_4_gray_fill"
            android:paddingHorizontal="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@+id/tv_match_result_win"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_match_result_divide_lane"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:background="#BBBBBB"
            android:alpha="0.4"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rg_match_result_winner"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_match_result_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/item_input_match_result"
            app:layout_constraintTop_toBottomOf="@+id/tv_match_result_divide_lane"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_add_btn"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_match_result_container"
            app:layout_constraintStart_toStartOf="@id/tv_match_result_win"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>