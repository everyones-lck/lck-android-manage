<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_update_ranking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_update_ranking_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="team_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_update_ranking_win_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFCF40"
            android:textSize="16sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_slash"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_slash"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_slash"/>

        <TextView
            android:id="@+id/tv_update_ranking_slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_lose_number"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_lose_number"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_lose_number"/>

        <TextView
            android:id="@+id/tv_update_ranking_lose_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#FF6464"
            android:textSize="16sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_slash_1"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_slash_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_slash_1"/>

        <TextView
            android:id="@+id/tv_update_ranking_slash_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toStartOf="@id/tv_update_ranking_winning_point"
            app:layout_constraintTop_toTopOf="@id/tv_update_ranking_winning_point"
            app:layout_constraintBottom_toBottomOf="@id/tv_update_ranking_winning_point"/>

        <TextView
            android:id="@+id/tv_update_ranking_winning_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>